<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_callout_item_background">

    <ImageView
        android:id="@+id/imageNativeView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="@dimen/item_callout_textview_text_size"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textNativeView" />

    <TextView
        android:id="@+id/textNativeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/item_callout_textview_text_size"
        android:textSize="@dimen/item_callout_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/infoClickableText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/button_margin_12dp"
        android:layout_marginEnd="@dimen/button_margin_12dp"
        android:layout_marginBottom="@dimen/button_margin_4dp"
        android:background="@drawable/hyperlink_underline"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/item_callout_info_text"
        android:textColor="@color/clor_blue"
        android:textSize="@dimen/item_callout_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageNativeView" />

</androidx.constraintlayout.widget.ConstraintLayout>